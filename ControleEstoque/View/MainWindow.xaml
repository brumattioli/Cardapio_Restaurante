                    <Label x:Name="codigoLabel1_Editar" Content="Código" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="139,106,0,0" Grid.Column="1" Height="26" Width="115" Grid.Row="1" Grid.ColumnSpan="2"/>
                    <TextBox x:Name="codigo_Editar" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="298" Margin="139,105,0,0" TextChanged="nome_TextChanged" Grid.Column="2" Grid.Row="1" IsEnabled="False"/>

                </Grid>
            </TabItem>
            <TabItem Header="Remover Produtos" Margin="18,0,-22,0">
