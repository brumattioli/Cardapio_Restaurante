                </Grid>
            </TabItem>
            <TabItem Header="Buscar Produtos" Margin="3,0,-7,0">
                <TabItem.DataContext>
                    <local:ProdutoViewModel/>
                </TabItem.DataContext>
                <Grid Background="#FFE5E5E5" Margin="0,0,-2,-2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="23*"/>
                        <ColumnDefinition Width="22*"/>
                        <ColumnDefinition Width="218*"/>
                        <ColumnDefinition Width="533*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="118*"/>
                        <RowDefinition Height="235*"/>
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="stockView_Buscar" ItemsSource="{Binding Produtos, UpdateSourceTrigger=PropertyChanged}"  HorizontalAlignment="Left" VerticalAlignment="Top" Height="294" Width="711" SelectionChanged="stockView_SelectionChanged" Margin="16,68,0,0" Grid.RowSpan="2" BorderThickness="1" IsTextSearchEnabled="True" AllowDrop="True" IsReadOnly="True" AutoGenerateColumns="False" Grid.ColumnSpan="4">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Codigo}" Header="Código" />
                            <DataGridTextColumn Binding="{Binding Nome}" Header="Nome" />
                            <DataGridTextColumn Binding="{Binding Preco}" Header="Preço" />
                            <DataGridTextColumn Binding="{Binding Quantidade}" Header="Quantidade" />
                            <DataGridTextColumn Binding="{Binding Status}" Header="Status" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <TextBox x:Name="codigoBusca_Buscar" Text="{Binding CodigoBusca, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="40,37,0,0" TextChanged="codigoBusca_TextChanged" Grid.Column="2" PreviewTextInput="NumberValidation"/>
                    <TextBox x:Name="nomeBusca_Buscar" Text="{Binding NomeBusca, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="208,37,0,0" TextChanged="nomeBusca_TextChanged" Grid.Column="2" Grid.ColumnSpan="2" PreviewTextInput="TextValidation"/>
                    <Button x:Name="filterButton_Buscar" Content="Filtrar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="51" Margin="125,40,0,0" Click="filterButton_Buscar_Click" Height="20" Grid.Column="3"/>
                    <Button x:Name="filterAllButton_Buscar" Content="Buscar todos os produtos" HorizontalAlignment="Left" VerticalAlignment="Top" Width="144" Margin="263,40,0,0" Click="btnExibirDados_Click" Height="20" Grid.Column="3"/>
                    <Button x:Name="noFilter_Buscar" Content="Limpar filtro" HorizontalAlignment="Left" VerticalAlignment="Top" Width="77" Margin="181,40,0,0" Click="noFilter_Buscar_Click" Height="20" Grid.Column="3"/>
                    <Label x:Name="nomeLabel_Buscar" Content="Nome" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="165,34,0,0" Grid.Column="2"/>
                    <Label x:Name="codigoLabel_Buscar" Content="Código" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="16,34,0,0" RenderTransformOrigin="2.023,0.87" Width="68" Grid.ColumnSpan="3"/>
                    <Label Content="Digite abaixo o código ou o nome do produto que deseja buscar:" HorizontalAlignment="Left" Margin="17,7,0,0" VerticalAlignment="Top" Grid.ColumnSpan="4" Width="649"/>
                </Grid>
            </TabItem>
            <TabItem Header="Editar Produtos" Margin="10,0,-14,0">
