                    <Label x:Name="nomeLabel3_Simular_Venda" Content="Código" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="16,89,0,0" Height="26" Width="115" Grid.Row="1" Grid.ColumnSpan="2"/>
                    <TextBox x:Name="codigo_Simular_Venda" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Margin="21,91,0,0" TextChanged="nome_TextChanged" Grid.Column="2" Grid.Row="1" PreviewTextInput="NumberValidation" IsEnabled="False"/>
                    <Label x:Name="Texto1_Simular_Venda" Content="Digite abaixo o código ou o nome para filtrar o produto desejado:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,11,0,0" Height="26" Width="486" Grid.ColumnSpan="3"/>
                </Grid>
            </TabItem>
            <TabItem Header="Buscar Vendas" Margin="34,0,-34,0">
                <Grid Background="#FFE5E5E5" Margin="0,0,-2,-2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="43*"/>
                        <ColumnDefinition Width="218*"/>
                        <ColumnDefinition Width="208*"/>
                        <ColumnDefinition Width="325*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="118*"/>
                        <RowDefinition Height="235*"/>
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="stockView_Buscar_Vendas" HorizontalAlignment="Left" VerticalAlignment="Top" Height="296" Width="711" SelectionChanged="stockView_SelectionChanged" Margin="8,41,0,0" Grid.RowSpan="2" BorderThickness="1" IsTextSearchEnabled="True" AllowDrop="True" IsReadOnly="True" AutoGenerateColumns="False" Grid.ColumnSpan="4" Grid.Column="1">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding codigo}" Header="Código Venda" />
                            <DataGridTextColumn Binding="{Binding produto.Codigo}" Header="Código Produto" />
                            <DataGridTextColumn Binding="{Binding produto.Nome}" Header="Produto" />
                            <DataGridTextColumn Binding="{Binding data}" Header="Data Venda" />
                            <DataGridTextColumn Binding="{Binding preco_venda}" Header="Preço Venda" />
                            <DataGridTextColumn Binding="{Binding quantidade_venda}" Header="Quantidade Venda"/>
