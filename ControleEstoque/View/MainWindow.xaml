                        <ColumnDefinition Width="158*"/>
                        <ColumnDefinition Width="615*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="118*"/>
                        <RowDefinition Height="235*"/>
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="stockView_Editar" HorizontalAlignment="Left" VerticalAlignment="Top" Height="92" Width="711" SelectionChanged="stockView_SelectionChanged" Margin="10,113,0,0" BorderThickness="1" IsTextSearchEnabled="True" AllowDrop="True" IsReadOnly="True" AutoGenerateColumns="False" Grid.ColumnSpan="3" Grid.RowSpan="2" MouseDoubleClick="getItem_Editar">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Codigo}" Header="Código" />
                            <DataGridTextColumn Binding="{Binding Nome}" Header="Nome" />
                            <DataGridTextColumn Binding="{Binding Preco}" Header="Preço" />
                            <DataGridTextColumn Binding="{Binding Quantidade}" Header="Quantidade" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <TextBox x:Name="codigoBusca_Editar" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="35,37,0,0" TextChanged="codigoBusca_TextChanged" Grid.Column="1" PreviewTextInput="NumberValidation"/>
                    <TextBox x:Name="nomeBusca_Editar" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="45,37,0,0" TextChanged="nomeBusca_TextChanged" Grid.Column="2" PreviewTextInput="TextValidation"/>
                    <Button x:Name="filterButton_Editar" Content="Filtrar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="51" Margin="179,40,0,0" Click="filterButton_Editar_Click" Height="20" Grid.Column="2"/>
                    <Button x:Name="noFilter_Editar" Content="Limpar filtro" HorizontalAlignment="Left" VerticalAlignment="Top" Width="77" Margin="235,40,0,0" Click="noFilter_Editar_Click" Height="20" Grid.Column="2"/>
                    <Label x:Name="nomeLabel_Editar" Content="Nome" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2,34,0,0" Grid.Column="2"/>
                    <Label x:Name="codigoLabel_Editar" Content="Código" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,34,0,0" Grid.ColumnSpan="2"/>
                    <Label x:Name="nomeLabel1_Editar" Content="Nome" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="139,131,0,0" Grid.Column="1" Height="26" Width="115" Grid.Row="1" Grid.ColumnSpan="2"/>
                    <Label x:Name="preçoLabel_Editar" Content="Preço" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="140,158,0,0" Grid.Column="1" Height="26" Width="115" Grid.Row="1" Grid.ColumnSpan="2"/>
                    <Label x:Name="quantidadeLabel_Editar" Content="Quantidade" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="139,188,0,0" Grid.Column="1" Height="26" Width="115" Grid.Row="1" Grid.ColumnSpan="2"/>
                    <TextBox x:Name="nome_Editar" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="298" Margin="139,132,0,0" TextChanged="nome_TextChanged" Grid.Column="2" Grid.Row="1" PreviewTextInput="TextValidation"/>
                    <TextBox x:Name="preco_Editar" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="298" Margin="139,160,0,0" TextChanged="preco_TextChanged" Grid.Column="2" Grid.Row="1" PreviewTextInput="DoubleValidation"/>
                    <TextBox x:Name="quantidade_Editar" HorizontalAlignment="Left" Height="26" TextWrapping="Wrap" VerticalAlignment="Top" Width="298" Margin="139,188,0,0" TextChanged="quantidade_TextChanged" Grid.Column="2" Grid.Row="1" RenderTransformOrigin="0.5,0.5" PreviewTextInput="NumberValidation"/>
                    <Button x:Name="editarItem" Content="Editar Item" HorizontalAlignment="Left" VerticalAlignment="Top" Width="149" Margin="139,221,0,0" Click="Editar_Click" Grid.Column="2" Height="20" Grid.Row="1"/>
                    <Label x:Name="Texto_Editar" Content="Preencha abaixo os dados que deseja alterar:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="139,77,0,0" Grid.Column="1" Height="26" Width="249" Grid.Row="1" Grid.ColumnSpan="2"/>
                    <Label Content="Digite abaixo o código ou nome do produto que deseja editar:" HorizontalAlignment="Left" Margin="11,6,0,0" VerticalAlignment="Top" Grid.ColumnSpan="3" Width="613"/>
