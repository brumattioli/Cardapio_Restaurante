                    <TextBox x:Name="nomeBusca_Buscar_Vendas" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="98" Margin="177,7,0,0" TextChanged="nomeBusca_TextChanged" Grid.Column="3" PreviewTextInput="TextValidation" Grid.ColumnSpan="2"/>
