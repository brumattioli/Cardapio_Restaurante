                    <Button x:Name="noFilter_Simular_Venda" Content="Limpar filtro" HorizontalAlignment="Left" VerticalAlignment="Top" Width="77" Margin="241,48,0,0" Click="noFilter_Simular_Venda_Click" Height="20" Grid.Column="2"/>
                    <Label x:Name="nomeLabel_Simular_Venda" Content="Nome" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,42,0,0" Grid.Column="2"/>
                    <Label x:Name="codigoLabel_Simular_Venda" Content="Código" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="16,42,0,0" Grid.ColumnSpan="2"/>
                    <Button x:Name="simularVenda" Content="Realizar Venda" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="40,209,0,0" Click="simularVenda_Click" Grid.Column="2" Height="20" Grid.Row="1"/>
                    <Label x:Name="nomeLabel2_Simular_Venda" Content="Nome" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="16,117,0,0" Height="26" Width="115" Grid.Row="1" Grid.ColumnSpan="2"/>
                    <Label x:Name="preçoLabel_Simular_Venda" Content="Preço" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="17,144,0,0" Height="26" Width="115" Grid.Row="1" Grid.ColumnSpan="2"/>
                    <Label x:Name="quantidadeLabel_Simular_Venda" Content="Quantidade" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="16,176,0,0" Height="26" Width="115" Grid.Row="1" Grid.ColumnSpan="2"/>
                    <TextBox x:Name="nome_Simular_Venda" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Margin="21,119,0,0" TextChanged="nome_TextChanged" Grid.Column="2" Grid.Row="1" PreviewTextInput="TextValidation" IsEnabled="False"/>
                    <TextBox x:Name="preco_Simular_Venda" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Margin="21,146,0,0" TextChanged="preco_TextChanged" Grid.Column="2" Grid.Row="1" PreviewTextInput="DoubleValidation"/>
                    <TextBox x:Name="quantidade_Simular_Venda" HorizontalAlignment="Left" Height="26" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Margin="21,174,0,0" TextChanged="quantidade_TextChanged" Grid.Column="2" Grid.Row="1" RenderTransformOrigin="0.5,0.5" PreviewTextInput="NumberValidation"/>
