                        <ColumnDefinition Width="158*"/>
                        <ColumnDefinition Width="615*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="118*"/>
                        <RowDefinition Height="235*"/>
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="stockView_Remover" HorizontalAlignment="Left" VerticalAlignment="Top" Height="232" Width="711" SelectionChanged="stockView_SelectionChanged" Margin="10,41,0,0" BorderThickness="1" IsTextSearchEnabled="True" AllowDrop="True" IsReadOnly="True" AutoGenerateColumns="False" Grid.ColumnSpan="3" Grid.RowSpan="2">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Codigo}" Header="Código" />
                            <DataGridTextColumn Binding="{Binding Nome}" Header="Nome" />
                            <DataGridTextColumn Binding="{Binding Preco}" Header="Preço" />
                            <DataGridTextColumn Binding="{Binding Quantidade}" Header="Quantidade" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <TextBox x:Name="codigoBusca_Remover" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="35,7,0,0" TextChanged="codigoBusca_TextChanged" Grid.Column="1" PreviewTextInput="NumberValidation"/>
                    <TextBox x:Name="nomeBusca_Remover" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="45,7,0,0" TextChanged="nomeBusca_TextChanged" Grid.Column="2" PreviewTextInput="TextValidation"/>
                    <Button x:Name="filterButton_Remover" Content="Filtrar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="51" Margin="179,10,0,0" Click="filterButton_Remover_Click" Height="20" Grid.Column="2"/>
                    <Button x:Name="noFilter_Remover" Content="Limpar filtro" HorizontalAlignment="Left" VerticalAlignment="Top" Width="77" Margin="235,10,0,0" Click="noFilter_Remover_Click" Height="20" Grid.Column="2"/>
                    <Label x:Name="nomeLabel_Remover" Content="Nome" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2,4,0,0" Grid.Column="2"/>
                    <Label x:Name="codigoLabel_Remover" Content="Código" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,4,0,0" Grid.ColumnSpan="2"/>
                    <Button x:Name="removerItem" Content="Remover Item" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="110,167,0,0" Click="Remover_Click" Grid.Column="2" Height="20" Grid.Row="1"/>
                </Grid>
            </TabItem>
            <TabItem Header="Venda" Margin="26,0,-30,0">
                <Grid Background="#FFE5E5E5" Margin="0,0,-2,-2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="23*"/>
                        <ColumnDefinition Width="158*"/>
                        <ColumnDefinition Width="615*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="118*"/>
                        <RowDefinition Height="235*"/>
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="stockView_Simular_Venda" HorizontalAlignment="Left" VerticalAlignment="Top" Height="106" Width="711" SelectionChanged="stockView_SelectionChanged" Margin="15,112,0,0" BorderThickness="1" IsTextSearchEnabled="True" AllowDrop="True" IsReadOnly="True" AutoGenerateColumns="False" Grid.ColumnSpan="3" MouseDoubleClick="getItem" Grid.RowSpan="2">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Codigo}" Header="Código" />
                            <DataGridTextColumn Binding="{Binding Nome}" Header="Nome" />
                            <DataGridTextColumn Binding="{Binding Preco}" Header="Preço" />
                            <DataGridTextColumn Binding="{Binding Quantidade}" Header="Quantidade" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <TextBox x:Name="codigoBusca_Simular_Venda" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="41,45,0,0" TextChanged="codigoBusca_TextChanged" Grid.Column="1" PreviewTextInput="NumberValidation" Grid.ColumnSpan="2"/>
                    <TextBox x:Name="nomeBusca_Simular_Venda" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="51,45,0,0" TextChanged="nomeBusca_TextChanged" Grid.Column="2" PreviewTextInput="TextValidation"/>
