                    <local:ProdutoViewModel /> <!-- Supondo que "local" seja o namespace onde a ViewModel está definida -->
                </TabItem.DataContext>
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="68*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="86*"/>
                        <ColumnDefinition Width="95*"/>
                        <ColumnDefinition Width="52*"/>
                        <ColumnDefinition Width="58*"/>
                        <ColumnDefinition Width="503*"/>
                        <ColumnDefinition Width="439*"/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="nomeLabel_Cadastrar" Content="Nome" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="35,43,0,0" Grid.Column="3" Height="26" Width="115" Grid.ColumnSpan="2" Grid.Row="1"/>
                    <Label x:Name="codigoLabel_Cadastrar" Content="Código" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="35,74,0,0" Grid.Column="3" Height="26" Width="115" Grid.Row="1" Grid.ColumnSpan="2"/>
                    <Label x:Name="preçoLabel_Cadastrar" Content="Preço" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="36,106,0,0" Grid.Column="3" Height="26" Width="115" Grid.Row="1" Grid.ColumnSpan="2"/>
                    <Label x:Name="quantidadeLabel_Cadastrar" Content="Quantidade" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="35,138,0,0" Grid.Column="3" Height="26" Width="115" Grid.Row="1" Grid.ColumnSpan="2"/>
                    <TextBox x:Name="nome_Cadastrar" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Margin="87,49,0,0" TextChanged="nome_TextChanged" Grid.Column="4" PreviewTextInput="TextValidation" Grid.Row="1" Grid.ColumnSpan="2"/>
                    <TextBox x:Name="codigo_Cadastrar" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Margin="87,77,0,0" TextChanged="codigo_TextChanged" Grid.Column="4" Grid.Row="1" PreviewTextInput="NumberValidation" Grid.ColumnSpan="2"/>
                    <TextBox x:Name="preco_Cadastrar" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Margin="87,108,0,0" TextChanged="preco_TextChanged" Grid.Column="4" Grid.Row="1" PreviewTextInput="DoubleValidation" Grid.ColumnSpan="2"/>
                    <TextBox x:Name="quantidade_Cadastrar" HorizontalAlignment="Left" Height="26" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Margin="87,136,0,0" TextChanged="quantidade_TextChanged" Grid.Column="4" Grid.Row="1" RenderTransformOrigin="0.5,0.5" PreviewTextInput="NumberValidation" Grid.ColumnSpan="2"/>
                    <Button x:Name="cadastrarProduto" Content="Cadastrar Produto" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="132,197,0,0" Click="Cadastrar_Click" Grid.Column="4" Height="20" Grid.Row="1"/>
